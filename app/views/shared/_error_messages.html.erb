<% if obj.errors.any? %>

  <div class="alert form-error">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      The form contains <%= pluralize(obj.errors.count, "error") %>.
    <ul>
    <% obj.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>

<% end %>